{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge 04",
    "description": "This is an API for Challenge 04",
    "version": "1.0.0",
    "contact": {
      "email": "felipe.pichl@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create users",
        "description": "Create a new user",
        "requestBody": {
          "required": true,
          "description": "Fields required for create a new user",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Due",
                  "email": "johndue@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created a new user",
            "content": {
              "application/json": {
                "example": {
                  "id": "e5f29978-8764-417c-9ff3-d73964e331d7",
                  "admin": false,
                  "name": "John Due",
                  "email": "johndue@example.com",
                  "created_at": "2022-04-29T01:02:49.546Z",
                  "updated_at": "2022-04-29T01:02:49.546Z"
                }
              }
            }
          },
          "400": {
            "description": "Error: Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "User already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "Only `admin` user can access",
        "parameters": [
          {
            "in": "header",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  },
                  "example": [
                    {
                      "id": "463e7b67-f3c1-4301-b960-eda7337737b8",
                      "admin": true,
                      "name": "John Due",
                      "email": "johndue@example.com",
                      "created_at": "2022-05-01T23:42:36.778Z",
                      "updated_at": "2022-05-01T23:42:36.778Z"
                    },
                    {
                      "id": "a8629921-b499-4bb7-960a-b390f24186c3",
                      "admin": false,
                      "name": "John Tre",
                      "email": "johntre@example.com",
                      "created_at": "2022-05-01T23:34:41.286Z",
                      "updated_at": "2022-05-01T23:34:41.286Z"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Error: Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error":"You need to be an administrator to list all users"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": ["Users"],
        "summary": "List an expecific user",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "example": {
                  "id": "463e7b67-f3c1-4301-b960-eda7337737b8",
                  "admin": true,
                  "name": "John Due",
                  "email": "johndue@example.com",
                  "created_at": "2022-05-01T23:42:36.778Z",
                  "updated_at": "2022-05-01T23:42:36.778Z"
                }
              }
            }
          },
          "404": {
            "description":"Error: Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "User not found"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": ["Users"],
        "summary": "Make user into admin",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "required": true
          }
        ]
      }
    }
  }
}
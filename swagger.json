{
  "openapi": "3.0.0",
  "info": {
    "title": "Challenge 04",
    "description": "This is an API for Challenge 04",
    "version": "1.0.0",
    "contact": {
      "email": "felipe.pichl@hotmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create users",
        "description": "Create a new user",
        "requestBody": {
          "required": true,
          "description": "Fields required for create a new user",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "John Due",
                  "email": "johndue@example.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created a new user",
            "content": {
              "application/json": {
                "example": {
                  "id": "e5f29978-8764-417c-9ff3-d73964e331d7",
                  "admin": false,
                  "name": "John Due",
                  "email": "johndue@example.com",
                  "created_at": "2022-04-29T01:02:49.546Z",
                  "updated_at": "2022-04-29T01:02:49.546Z"
                }
              }
            }
          },
          "400": {
            "description": "Error: Bad Request",
            "content": {
              "application/json": {
                "example": {
                  "error": "User already exists"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Users"],
        "summary": "List all users",
        "description": "Only `admin` user can access",
        "parameters": {
          "name": "user_id",
          "in": "path"
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}